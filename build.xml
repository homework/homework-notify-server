<project default="compile" basedir=".">
	<property file="build.properties" />

	<path id="classpath">
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="compile">
		<mkdir dir="build" />
		<javac destdir="build">
			<src path="registrations" />
			<src path="notifications" />
			<classpath refid="classpath" />
		</javac>
		<javac destdir="build">
			<src path="." />
			<exclude name="registrations/**" />
			<exclude name="notifications/**" />
			<classpath refid="classpath" />
		</javac>
	</target>
</project>
